@using LogInSystem.Models
@model AccountModel.ForgotPassword

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/ForgotPassword.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="row">
        <div class="col-md-8">
            <section id="ForgotPasswordForm">
                @using (Html.BeginForm("ForgotPassword", "ForgotPassword", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    if (ViewData["ForgotPassword"] != null)
                    {
                        if ((bool)ViewData["ForgotPassword"])
                        {
                            <div class="form-group">
                                @Html.Label(ViewData["success"].ToString(), new { @class = "ForgotPassword-success" })
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                @Html.Label(ViewData["error"].ToString(), new { @class = "ForgotPassword-not-success" })
                            </div>
                        }
                    }

                    <div class="form-group">
                        <input type="submit" value="Reset Password" class="btn btn-default" />
                    </div>
                }
            </section>
        </div>
    </div>
</body>
</html>

